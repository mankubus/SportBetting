<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvMainOne"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/str_liveodds"
        android:textColor="@color/llGreyColor" android:layout_centerHorizontal="true" android:textSize="17dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="270dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" >

        <Button
            android:id="@+id/btn_sportnfl"
            android:layout_width="79dp"
            android:layout_height="74sp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btn_sportnba"
            android:focusableInTouchMode="true" android:background="@drawable/sport_nfl"/>

        <Button
            android:id="@+id/btn_sportnba"
            android:layout_width="79sp"
            android:layout_height="74sp"
            android:layout_alignBaseline="@+id/btn_sportnfl"
            android:layout_alignBottom="@+id/btn_sportnfl"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sport_nba" />

        <Button
            android:id="@+id/btn_sportmlb"
            android:layout_width="79dp"
            android:layout_height="74dp"
            android:layout_alignBaseline="@+id/btn_sportnba"
            android:layout_alignBottom="@+id/btn_sportnba"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/btn_sportnba"
            android:background="@drawable/sport_mlb" />

        <TextView
            android:id="@+id/tv_nfl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_sportnfl"
            android:layout_below="@+id/btn_sportnfl"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-2dp"
            android:text="NFL"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

        <TextView
            android:id="@+id/tv_nba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_nfl"
            android:layout_alignBottom="@+id/tv_nfl"
            android:layout_centerHorizontal="true"
            android:text="NBA"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

        <TextView
            android:id="@+id/tv_mlb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_nba"
            android:layout_alignBottom="@+id/tv_nba"
            android:layout_alignRight="@+id/btn_sportmlb"
            android:layout_marginRight="14dp"
            android:text="MLB"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

        <Button
            android:id="@+id/btn_sportnhl"
            android:layout_width="79sp"
            android:layout_height="74sp"
            android:layout_alignLeft="@+id/btn_sportnfl"
            android:layout_below="@+id/tv_nfl"
            android:layout_marginTop="5dp"
            android:background="@drawable/sport_nhl" />

        <Button
            android:id="@+id/btn_sportcfl"
            android:layout_width="79sp"
            android:layout_height="74sp"
            android:layout_alignBaseline="@+id/btn_sportnhl"
            android:layout_alignBottom="@+id/btn_sportnhl"
            android:layout_alignLeft="@+id/btn_sportnba"
            android:background="@drawable/sport_cfl" />

        <Button
            android:id="@+id/btn_sportncaaf"
            android:layout_width="79sp"
            android:layout_height="74sp"
            android:layout_alignBaseline="@+id/btn_sportcfl"
            android:layout_alignBottom="@+id/btn_sportcfl"
            android:layout_alignLeft="@+id/btn_sportmlb"
            android:background="@drawable/sport_ncaaf" />

        <TextView
            android:id="@+id/tv_nhl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_nfl"
            android:layout_below="@+id/btn_sportnhl"
            android:layout_marginTop="-2dp"
            android:text="NHL"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

        <TextView
            android:id="@+id/tv_cfl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_nhl"
            android:layout_alignBottom="@+id/tv_nhl"
            android:layout_centerHorizontal="true"
            android:text="CFL"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

        <TextView
            android:id="@+id/tv_ncaaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_cfl"
            android:layout_alignBottom="@+id/tv_cfl"
            android:layout_alignRight="@+id/btn_sportncaaf"
            android:layout_marginRight="5dp"
            android:text="NCAAF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

        <Button
            android:id="@+id/btn_sportncaab"
            android:layout_width="79sp"
            android:layout_height="74sp"
            android:layout_alignLeft="@+id/btn_sportnhl"
            android:layout_below="@+id/tv_nhl"
            android:background="@drawable/sport_ncaab" android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_ncaab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_sportncaab"
            android:layout_below="@+id/btn_sportncaab"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-2dp"
            android:text="NCAAB"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

        <Button
            android:id="@+id/btn_sportsoccer"
            android:layout_width="79sp"
            android:layout_height="74sp"
            android:background="@drawable/sport_soccer" android:layout_alignBaseline="@id/btn_sportncaab" android:layout_alignBottom="@id/btn_sportncaab" android:layout_alignLeft="@id/btn_sportcfl" android:layout_below="@id/tv_cfl" android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_soccer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_ncaab"
            android:layout_alignBottom="@+id/tv_ncaab"
            android:layout_centerHorizontal="true"
            android:text="Soccer"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/llGreyColor" />

    </RelativeLayout>

</RelativeLayout>